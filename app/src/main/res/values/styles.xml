<resources>

    <style name="RowHeaderText">
        <item name="android:textSize">@dimen/font_extraLarge</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/row_text_padding</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingRight">@dimen/row_text_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/row_height_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.LsPush" parent="android:Widget" />

    <!-- Divider -->
    <style name="Widget.LsPush.Divider.Horizontal.Small" parent="">
        <item name="android:background">@color/grey_2_whiteout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="Widget.LsPush.Divider.Horizontal.Medium" parent="">
        <item name="android:background">@color/grey_2_whiteout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Widget.LsPush.Divider.Horizontal.Large" parent="">
        <item name="android:background">@color/grey_20_transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <!-- Button -->
    <style name="Widget.LsPush.Button">
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/row_height_small</item>
        <item name="android:minWidth">@dimen/button_width_small</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:focusable">false</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:cacheColorHint">@color/white</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>

    <style name="Widget.LsPush.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:windowAnimationStyle">@style/animationDialog</item>
        <item name="android:listChoiceIndicatorSingle">@null</item>
        <item name="android:listChoiceIndicatorMultiple">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:listChoiceBackgroundIndicator">@null</item>
        <item name="android:activatedBackgroundIndicator">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Widget.LsPush.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/login_input_field</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_70_transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Widget.LsPush.ClearEditText" parent="Widget.LsPush.EditText">
        <item name="android:drawableRight">@drawable/search_clear</item>
    </style>

    <style name="Widget.LsPush.ClearEditText.Light" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/button_border_light</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_65_transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="animationDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textSize">@dimen/font_extraLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:background">@drawable/input_white</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:freezesText">true</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawableRight">@drawable/search_clear</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextInputHint" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red_5</item>
    </style>

    <style name="TextInputCounter" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white_70_transparent</item>
    </style>

    <style name="TextInputCounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">@color/orange_5</item>
    </style>

    <!--<style name="TitleTextAppearance" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">-->
    <!--<item name="android:textColor">@color/white</item>-->
    <!--<item name="android:textSize">@dimen/font_extraLarge</item>-->
    <!--</style>-->

    <style name="Widget.LsPush.Toolbar">
        <!--<item name="android:titleTextAppearance">@style/TitleTextAppearance</item>-->
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!--<style name="OverflowMenuStyle">-->
    <!--<item name="android:popupBackground">@color/white</item>-->
    <!--<item name="android:textColor">@color/black</item>-->
    <!--<item name="android:background">@color/white</item>-->
    <!--<item name="android:selectableItemBackgroundBorderless">@drawable/web_view_menu_item_background</item>-->
    <!--</style>-->

    <style name="Widget.LsPush.TagView">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/green_medium</item>
        <item name="android:paddingLeft">@dimen/tag_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/tag_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/tag_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/tag_vertical_padding</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_inputHint">@string/add_tag</item>
        <item name="atg_borderColor">@color/green_medium</item>
        <item name="atg_textColor">@color/green_medium</item>
        <item name="atg_backgroundColor">@color/white</item>
        <item name="atg_dashBorderColor">@color/grey_30_transparent</item>
        <item name="atg_inputHintColor">@color/black_50_transparent</item>
        <item name="atg_inputTextColor">@color/black_95_transparent</item>
        <item name="atg_checkedBorderColor">@color/green_medium</item>
        <item name="atg_checkedTextColor">@color/white</item>
        <item name="atg_checkedMarkerColor">@color/white</item>
        <item name="atg_checkedBackgroundColor">@color/green_medium</item>
        <item name="atg_pressedBackgroundColor">@color/grey_1_whiteout</item>
        <item name="atg_borderStrokeWidth">@dimen/tag_border_width</item>
        <item name="atg_textSize">@dimen/font_small</item>
        <item name="atg_horizontalSpacing">@dimen/tag_horizontal_spacing</item>
        <item name="atg_verticalSpacing">@dimen/tag_vertical_spacing</item>
        <item name="atg_horizontalPadding">@dimen/tag_horizontal_padding</item>
        <item name="atg_verticalPadding">@dimen/tag_vertical_padding</item>
    </style>

    <style name="WebViewMenuItemTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/menu_item_left_padding</item>
        <item name="android:paddingRight">@dimen/menu_item_right_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="WebViewMenuItem">
        <item name="android:background">@drawable/web_view_menu_item_background</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:titleTextAppearance">@style/TitleTextAppearance</item>-->
        <item name="android:windowBackground">@color/grey_10_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
    </style>

    <style name="AppTheme.WebView">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.Auth">
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- see http://saulmm.github.io/avoding-android-cold-starts -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_background</item>
    </style>

    <style name="AppTheme.Launcher2">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>
