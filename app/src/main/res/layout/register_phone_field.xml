<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height_small"
    android:background="@drawable/login_input_field"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/country_code_picker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:freezesText="true"
        android:gravity="center"
        android:paddingLeft="@dimen/textField_padding"
        android:paddingRight="@dimen/textField_padding"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="CN +86" />

    <View
        android:layout_width="@dimen/dividerLine_thickness"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_20_transparent" />

    <com.tomeokin.lspush.ui.widget.SearchEditText
        android:id="@+id/phone_field"
        style="@style/Widget.LsPush.ClearEditText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/phone_hint"
        android:inputType="phone"
        android:paddingLeft="@dimen/textField_padding"
        android:paddingRight="@dimen/textField_padding" />

</LinearLayout>